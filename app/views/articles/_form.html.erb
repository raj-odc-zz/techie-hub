
<%= form_for(@article, html: {multipart: true}) do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body %><br />
      <%#= f.simplemde_text_area :body %>
      <%= f.cktext_area :body%>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.autocomplete_field :tag_list, autocomplete_tag_name_articles_path, :"data-delimiter" => ', ' %>
      <%#= f.collection_select :tag_list, Tag.order(:name), :id, :name, {}, {multiple: true} %>
    </p>
    <p>
      <% if @article.image.exists? %>
          <%= image_tag @article.image.url %><br/>
      <% end %>
      <%= f.label :image, "Attach a New Image" %><br />
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.submit %>
    </p>

<% end %>

